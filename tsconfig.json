{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es5", "esnext"],
    "rootDir": "src",
    "outDir": "framework",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "esModuleInterop": false,
    "declaration": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
