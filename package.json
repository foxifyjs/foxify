{
  "name": "foxify",
  "private": true,
  "description": "FoxifyJS monorepo",
  "homepage": "https://foxify.js.org",
  "license": "MIT",
  "repository": "github:foxifyjs/foxify",
  "bugs": {
    "url": "https://github.com/foxifyjs/foxify/issues"
  },
  "keywords": [
    "foxify"
  ],
  "scripts": {
    "document": "typedoc",
    "benchmark": "pnpm -r --filter './benchmarks/*' start",
    "lint": "nx run-many --target=lint",
    "lint:fix": "pnpm -r lint:fix",
    "build": "nx run-many --target=build",
    "test": "nx run-many --target=test",
    "test:coverage": "pnpm test -- -- --coverage",
    "test:ci": "pnpm test:coverage --ci --verbose"
  },
  "engines": {
    "node": ">=16",
    "pnpm": "^8.6.2"
  },
  "packageManager": "pnpm@8.6.2",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@nrwl/workspace": "^16.3.2",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-config-noir": "^1.3.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.20",
    "nx": "16.3.2",
    "nx-cloud": "^16.0.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.3"
  },
  "workspaces": [
    "benchmarks/*",
    "examples/*",
    "packages/*"
  ]
}
